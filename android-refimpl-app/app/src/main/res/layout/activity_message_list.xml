<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zoffcc.applications.trifa.MessageListActivity">

    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="" />

        <com.zoffcc.applications.trifa.CustomSpinner
            android:id="@+id/spinner_filter_msgs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:paddingLeft="0dp" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view_messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            app:iconifiedByDefault="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ml_container_001"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ml_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="1dip"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/circle_red" />

        <ImageView
            android:id="@+id/ml_status_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="6dip"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/circle_green" />


        <TextView
            android:id="@+id/ml_maintext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1000"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/layout___name"
            android:textColor="@color/md_black_1000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="" />

        <ImageButton
            android:id="@+id/ml_phone_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:layout_weight="0"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="false"
            android:padding="7dp"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:src="@drawable/circle_orange" />

        <ImageButton
            android:id="@+id/ml_video_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="7dp"
            android:layout_weight="0"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="false"
            android:visibility="gone"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/circle_orange" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <fragment
            android:id="@+id/ml_fragment"
            android:name="com.zoffcc.applications.trifa.MessageListFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:layout="@layout/message_list_layout" />

        <LinearLayout
            android:id="@+id/audio_rec_popup_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_red_dark_bg"
            android:visibility="gone"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/audio_rec_popup_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="100dp"
                android:background="@drawable/rounded_red_dark_bg"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/baseline_keyboard_voice_24"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/audio_rec_popup_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:gravity="center"
                android:textSize="35sp"
                android:text="1:20"
                android:textColor="#E0E0E0"/>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ml_friend_typing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:cursorVisible="true"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/md_black_1000"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emoji_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/insert_emoji"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="7dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="7dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/i_emoji_google_category_people"
            tools:ignore="ContentDescription" />

        <com.vanniktech.emoji.EmojiEditText
            android:id="@+id/ml_new_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:cursorVisible="true"
            android:ellipsize="end"
            android:imeOptions="flagNoPersonalizedLearning|actionSend"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:singleLine="false"
            android:text=""
            android:textColor="@color/md_black_1000"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ml_button_01"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_weight="0"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:onClick="send_message_onclick"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_menu_send" />

            <ImageButton
                android:id="@+id/ml_button_recaudio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_weight="0"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_keyboard_voice_24" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>


