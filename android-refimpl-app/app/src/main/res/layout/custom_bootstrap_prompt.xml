<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Enter IP Address and Port for Custom bootstrap node.\nYou can enter only a TCP or only a UDP node, or both.\n\n!Warning!: the custom bootstrap nodes will be used in addition to normal bootstrap nodes!"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/edit_bootstrap_udp_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="UDP IP Address"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="15dp"
                android:singleLine="true">

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/edit_bootstrap_udp_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="UDP Port"
                android:inputType="number"
                android:maxLines="1"
                android:paddingBottom="15dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/edit_bootstrap_udp_keyhex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="UDP Key as HEX"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="15dp"
                android:singleLine="true" />


            <EditText
                android:id="@+id/edit_bootstrap_tcp_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="TCP IP Address"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="15dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/edit_bootstrap_tcp_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="TCP Port"
                android:inputType="number"
                android:maxLines="1"
                android:paddingBottom="15dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/edit_bootstrap_tcp_keyhex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="TCP Key as HEX"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="15dp"
                android:singleLine="true" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>