<resources>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference"/>
        <attr name="metaButtonBarButtonStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ZoomableTextureView">
        <attr name="lucem_minScale" format="float" />
        <attr name="lucem_maxScale" format="float" />
    </declare-styleable>

    <!-- for emoji 0.5.1 ?? -->
    <attr name="cardBackgroundColor" format="color"></attr>
    <attr name="cardCornerRadius" format="dimension"></attr>
    <attr name="cardElevation" format="dimension"></attr>
    <attr name="cardUseCompatPadding" format="boolean"></attr>
    <!-- for emoji 0.5.1 ?? -->

    <declare-styleable name="VoicePlayerView">
        <attr name="viewBackground" format="color" />
        <attr name="playPauseBackgroundColor" format="color" />
        <attr name="shareBackgroundColor" format="color" />
        <attr name="seekBarProgressColor" format="color" />
        <attr name="seekBarThumbColor" format="color" />
        <attr name="progressTimeColor" format="color" />
        <attr name="showShareButton" format="boolean" />
        <attr name="showTiming" format="boolean" />
        <attr name="viewCornerRadius" format="float" />
        <attr name="playPauseCornerRadius" format="float" />
        <attr name="shareCornerRadius" format="float" />
        <attr name="shareText" format="string" />
        <attr name="enableVisualizer" format="boolean" />
        <attr name="timingBackgroundColor" format="color" />
        <attr name="visualizationPlayedColor" format="color" />
        <attr name="visualizationNotPlayedColor" format="color" />
        <attr name="playProgressbarColor" format="color" />

    </declare-styleable>
</resources>
