<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#00ff0000"/>
            <stroke
                android:width="3dp"
                android:color="#ff0000"/>
            <size
                android:width="20dp"
                android:height="20dp"/>
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="0">
            <shape android:shape="line">
                <stroke
                    android:width="3dp"
                    android:color="#ff0000"/>
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="0">
            <shape android:shape="line">
                <stroke
                    android:width="3dp"
                    android:color="#ff0000"/>
            </shape>
        </rotate>
    </item>
</layer-list>

