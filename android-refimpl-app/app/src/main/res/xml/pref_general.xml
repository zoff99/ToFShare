            android:summary="@string/pref_description_X_audio_play_buffer_custom"
            android:title="@string/pref_title_X_audio_play_buffer_custom" />

        <ListPreference
            android:defaultValue="40"
            android:entries="@array/X_audio_recording_frame_size_titles"
