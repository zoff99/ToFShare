            android:defaultValue="false"
            android:key="orbot_enabled"
            android:summary="@string/pref_description_orbot_enabled"
            android:title="@string/pref_title_orbot_enabled" />

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/pref_video_cam_resolution_titles"
            android:entryValues="@array/pref_video_cam_resolution_values"
            android:key="video_cam_resolution"
