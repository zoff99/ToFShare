            android:numeric="integer"
            android:summary="@string/pref_description_message_paging_num_msgs_per_page"
            android:title="@string/pref_title_message_paging_num_msgs_per_page" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="auto_accept_image"
            android:summary="@string/pref_description_auto_accept_image"
            android:title="@string/pref_title_auto_accept_image" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="auto_accept_video"
            android:summary="@string/pref_description_auto_accept_video"
