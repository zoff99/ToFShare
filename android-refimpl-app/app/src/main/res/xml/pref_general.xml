            android:title="@string/pref_title_toxirc_muted_peers_01" />

        <EditTextPreference
            android:defaultValue=""
            android:key="toxirc_muted_peers_02"
            android:maxLength="100"
            android:singleLine="true"
            android:summary="@string/pref_description_toxirc_muted_peers_02"
            android:title="@string/pref_title_toxirc_muted_peers_01" />

        <EditTextPreference
            android:defaultValue=""
