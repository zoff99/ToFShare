<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="general">
        <ListPreference
            android:defaultValue="2"
            android:entries="@array/pref_dark_mode_titles"
            android:entryValues="@array/pref_dark_mode_values"
            android:key="dark_mode_pref"
            android:summary="change default theme to dark mode"
            android:title="Dark Mode" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="start_on_boot"
            android:summary="@string/pref_description_start_on_boot"
            android:title="@string/pref_title_start_on_boot" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="use_push_service"
            android:summary="@string/pref_description_use_push_service"
            android:title="@string/pref_title_use_push_service" />

        <Preference
            android:key="download_push_msg_app"
            android:summary="__"
            android:title="@string/pref_title_download_push_msg_app" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="allow_push_server_ntfy"
            android:summary="@string/pref_description_allow_push_server_ntfy"
